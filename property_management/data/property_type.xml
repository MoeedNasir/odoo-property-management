<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- Seed property types with stable XML IDs -->
    <record id="property_type_house" model="property.type">
        <field name="name">House</field>
        <field name="property_kind">house</field>
    </record>

    <record id="property_type_apartment" model="property.type">
        <field name="name">Apartment</field>
        <field name="property_kind">apartment</field>
    </record>

    <record id="property_type_studio" model="property.type">
        <field name="name">Studio</field>
        <field name="property_kind">apartment</field>  <!-- Studio is a type of apartment -->
    </record>

    <record id="property_type_office" model="property.type">
        <field name="name">Office</field>
        <field name="property_kind">office</field>
    </record>

    <record id="property_type_warehouse" model="property.type">
        <field name="name">Warehouse</field>
        <field name="property_kind">warehouse</field>
    </record>

    <record id="property_type_commercial" model="property.type">
        <field name="name">Commercial Building</field>
        <field name="property_kind">commercial</field>
    </record>

    <record id="property_type_land" model="property.type">
        <field name="name">Land Plot</field>
        <field name="property_kind">land</field>
    </record>
</odoo>