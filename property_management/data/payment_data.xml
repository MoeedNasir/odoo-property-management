<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Payment Sequence -->
    <record id="seq_property_payment" model="ir.sequence">
        <field name="name">Property Payment Reference</field>
        <field name="code">property.payment</field>
        <field name="prefix">PAY/</field>
        <field name="padding">4</field>
        <field name="company_id" eval="False"/>
    </record>

    <!-- Cron Job for Overdue Payments -->
    <record id="cron_update_overdue_payments" model="ir.cron">
        <field name="name">Update Overdue Payments</field>
        <field name="model_id" ref="model_property_payment"/>
        <field name="state">code</field>
        <field name="code">model._cron_update_overdue_payments()</field>
        <field name="interval_number">1</field>
        <field name="interval_type">days</field>
        <field name="active">True</field>
    </record>
</odoo>