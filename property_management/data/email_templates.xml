<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Email Template for Property Sold -->
    <record id="email_template_property_sold" model="mail.template">
        <field name="name">Property Sold Notification</field>
        <field name="model_id" ref="model_property_property"/>
        <field name="subject">Property Sold: ${object.name}</field>
        <field name="email_from">${user.email}</field>
        <field name="email_to">${user.email}</field>
        <field name="body_html"><![CDATA[
            <div style="font-family: Arial, sans-serif; max-width: 600px; margin: 0 auto;">
                <h2 style="color: #2E86AB;">Property Sold Notification</h2>
                <p>Dear Property Manager,</p>

                <p>The following property has been marked as <strong>SOLD</strong>:</p>

                <div style="background-color: #f9f9f9; padding: 15px; border-left: 4px solid #2E86AB; margin: 20px 0;">
                    <h3 style="margin-top: 0;">${object.name}</h3>
                    <p><strong>Reference:</strong> ${object.reference_code}</p>
                    <p><strong>Address:</strong> ${object.address}</p>
                    <p><strong>Selling Price:</strong> $${object.selling_price}</p>
                    <p><strong>Expected Price:</strong> $${object.expected_price}</p>
                </div>

                <p>Please update your records accordingly.</p>

                <hr style="border: none; border-top: 1px solid #eee; margin: 20px 0;">

                <p style="color: #777; font-size: 12px;">
                    This is an automated notification from the Property Management System.
                </p>
            </div>
        ]]></field>
    </record>

    <!-- Email Template for Property Available -->
    <record id="email_template_property_available" model="mail.template">
        <field name="name">Property Available Notification</field>
        <field name="model_id" ref="model_property_property"/>
        <field name="subject">Property Available: ${object.name}</field>
        <field name="email_from">${user.email}</field>
        <field name="email_to">${user.email}</field>
        <field name="body_html"><![CDATA[
            <div style="font-family: Arial, sans-serif; max-width: 600px; margin: 0 auto;">
                <h2 style="color: #2E86AB;">Property Available Notification</h2>
                <p>Dear Property Manager,</p>

                <p>The following property is now <strong>AVAILABLE</strong>:</p>

                <div style="background-color: #f9f9f9; padding: 15px; border-left: 4px solid #2E86AB; margin: 20px 0;">
                    <h3 style="margin-top: 0;">${object.name}</h3>
                    <p><strong>Reference:</strong> ${object.reference_code}</p>
                    <p><strong>Address:</strong> ${object.address}</p>
                    <p><strong>Monthly Rate:</strong> $${object.monthly_rate}</p>
                    <p><strong>Property Type:</strong> ${object.property_kind}</p>
                    <p><strong>Size:</strong> ${object.size} sq ft</p>
                </div>

                <p>This property can now be shown to potential tenants/buyers.</p>

                <hr style="border: none; border-top: 1px solid #eee; margin: 20px 0;">

                <p style="color: #777; font-size: 12px;">
                    This is an automated notification from the Property Management System.
                </p>
            </div>
        ]]></field>
    </record>
</odoo>