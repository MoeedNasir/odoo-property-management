<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Payment Action -->
    <record id="action_property_payment" model="ir.actions.act_window">
        <field name="name">Rent Payments</field>
        <field name="res_model">property.payment</field>
        <field name="view_mode">list,form,graph</field>
    </record>
    <!-- Payment Tree View -->
    <record id="view_payment_tree" model="ir.ui.view">
        <field name="name">property.payment.tree</field>
        <field name="model">property.payment</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="property_id"/>
                <field name="tenant_id"/>
                <field name="amount"/>
                <field name="due_date"/>
                <field name="payment_date"/>
                <field name="state"/>
                <field name="is_overdue" invisible="1"/>
                <field name="days_overdue"/>
                <field name="days_overdue" decoration-danger="is_overdue==True"/>
            </list>
        </field>
    </record>
    <!-- Payment Form View -->
    <record id="view_payment_form" model="ir.ui.view">
        <field name="name">property.payment.form</field>
        <field name="model">property.payment</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="action_mark_paid"
                            type="object"
                            string="Mark as Paid" class="btn-primary"
                            invisible="state == 'paid'"
                    />
                    <button name="action_mark_pending" type="object"
                            string="Mark as Pending" class="btn-secondary"
                            invisible="state not in ('draft', 'overdue')"
                    />
                    <button name="action_mark_overdue"
                            type="object"
                            string="Mark as Overdue" class="btn-warning"
                            invisible="state != 'pending'"
                    />
                    <button name="action_cancel"
                            type="object"
                            string="Cancel" class="btn-danger"
                            invisible="state == 'paid'"
                    />
                    <field name="state" widget="statusbar"/>
                </header>
                <sheet>
                    <group>
                        <group>
                            <field name="name" readonly="1"/>
                            <field name="property_id"/>
                            <field name="tenant_id"/>
                            <field name="amount"/>
                            <field name="monthly_rent" readonly="1"/>
                        </group>
                        <group>
                            <field name="due_date"/>
                            <field name="payment_date"/>
                            <field name="payment_method"/>
                            <field name="state"/>
                            <field name="is_overdue" invisible="1"/>
                            <field name="days_overdue" readonly="1"/>
                        </group>
                    </group>
                    <group>
                        <field name="notes"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    <!-- Payment Search View -->
    <record id="view_payment_search" model="ir.ui.view">
        <field name="name">property.payment.search</field>
        <field name="model">property.payment</field>
        <field name="arch" type="xml">
            <search>
                <field name="property_id"/>
                <field name="tenant_id"/>
                <field name="state"/>
                <field name="due_date"/>
                <filter string="Overdue Payments" name="overdue" domain="[('state', '=', 'overdue')]"/>
                <filter string="Pending Payments" name="pending" domain="[('state', '=', 'pending')]"/>
                <filter string="Paid Payments" name="paid" domain="[('state', '=', 'paid')]"/>
                <filter string="This Month" name="this_month" domain="[('due_date', '&gt;=', context_today().replace(day=1)), ('due_date', '&lt;=', context_today())]"/>
                <!--Role based filters-->
                <filter string="My Payments" name="my_payments"
                        domain="[('tenant_id.user_id', '=', uid)]"
                        groups="property_management.group_tenant_user"/>
                <filter string="My Property Payments" name="my_property_payments"
                        domain="[('property_id.create_uid', '=', uid)]"
                        groups="property_management.group_sales_agent"/>
                <!--Group based filters-->
                <group expand="0" string="Group By">
                    <filter string="Property" name="group_by_property" context="{'group_by': 'property_id'}"/>
                    <filter string="Tenant" name="group_by_tenant" context="{'group_by': 'tenant_id'}"/>
                    <filter string="Status" name="group_by_status" context="{'group_by': 'state'}"/>
                </group>
            </search>
        </field>
    </record>
    <!-- Payment Graph View -->
    <record id="view_payment_graph" model="ir.ui.view">
        <field name="name">property.payment.graph</field>
        <field name="model">property.payment</field>
        <field name="arch" type="xml">
            <graph type="bar">
                <field name="property_id" type="row"/>
                <field name="amount" type="measure"/>
                <field name="state" type="row"/>
            </graph>
        </field>
    </record>
</odoo>