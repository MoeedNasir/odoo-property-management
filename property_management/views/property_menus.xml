<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <!--Menu item to open property view-->
    <menuitem
        id= "menu_property_root"
        name= "Property Management"
        sequence= "10"
        web_icon= "property_management,static/description/icon.png"
        action="action_property_property"
    />
    <!--SubMenu for Properties-->
    <menuitem
            id="menu_property_main"
            name="Properties"
            parent="menu_property_root"
            action="action_property_property"
            sequence="10"
    />
    <!-- Dashboard Menu -->
    <menuitem
            id="menu_property_dashboard"
            name="Dashboard"
            parent="menu_property_root"
            action="action_property_dashboard"
            sequence="5"
    />
    <!-- Tenant Menu (as a sub-menu under Property Management) -->
    <menuitem
            id="menu_property_tenant"
            name="Tenants"
            parent="menu_property_main"
            action="action_property_tenant"
            sequence="20"
    />
    <!-- Payment Menu -->
    <menuitem
        id="menu_property_payment"
        name="Payments"
        parent="menu_property_main"
        action="action_property_payment"
        sequence="30"
    />
</odoo>