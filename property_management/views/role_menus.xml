<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Property Manager Menu (Full Access) -->
    <menuitem id="menu_property_manager_root" name="Property Management"
              sequence="10" web_icon="property_management,static/description/icon.png"
              groups="property_management.group_property_manager"/>

    <menuitem id="menu_property_manager_dashboard" name="Dashboard"
              parent="menu_property_manager_root" action="action_property_dashboard"
              sequence="5" groups="property_management.group_property_manager"/>

    <menuitem id="menu_property_manager_main" name="Properties"
              parent="menu_property_manager_root" action="action_property_property"
              sequence="10" groups="property_management.group_property_manager"/>

    <menuitem id="menu_property_manager_tenant" name="Tenants"
              parent="menu_property_manager_main" action="action_property_tenant"
              sequence="20" groups="property_management.group_property_manager"/>

    <menuitem id="menu_property_manager_payment" name="Payments"
              parent="menu_property_manager_main" action="action_property_payment"
              sequence="30" groups="property_management.group_property_manager"/>

    <!-- Sales Agent Menu (Limited Access) -->
    <menuitem id="menu_sales_agent_root" name="Property Sales"
              sequence="15" web_icon="property_management,static/description/icon.png"
              groups="property_management.group_sales_agent"/>

    <menuitem id="menu_sales_agent_properties" name="Available Properties"
              parent="menu_sales_agent_root" action="action_property_property"
              sequence="10" groups="property_management.group_sales_agent"/>

    <menuitem id="menu_sales_agent_my_properties" name="My Properties"
              parent="menu_sales_agent_root" action="action_property_property"
              sequence="20" groups="property_management.group_sales_agent"
              context="{'search_default_my_properties': 1}"/>

    <!-- Tenant User Menu (Restricted Access) -->
    <menuitem id="menu_tenant_user_root" name="My Property"
              sequence="20" web_icon="property_management,static/description/icon.png"
              groups="property_management.group_tenant_user"/>

    <menuitem id="menu_tenant_my_property" name="Property Details"
              parent="menu_tenant_user_root" action="action_property_property"
              sequence="10" groups="property_management.group_tenant_user"
              context="{'search_default_my_property': 1}"/>

    <menuitem id="menu_tenant_my_payments" name="My Payments"
              parent="menu_tenant_user_root" action="action_property_payment"
              sequence="20" groups="property_management.group_tenant_user"
              context="{'search_default_my_payments': 1}"/>
</odoo>