<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Sales Agent Action -->
        <record id="action_property_property_agent" model="ir.actions.act_window">
            <field name="name">Available Properties</field>
            <field name="res_model">property.property</field>
            <field name="view_mode">kanban,list,form</field>
            <field name="domain">[('state', '=', 'available')]</field>
            <field name="context">{'search_default_available': 1}</field>
        </record>

        <!-- Tenant Action -->
        <record id="action_property_property_tenant" model="ir.actions.act_window">
            <field name="name">My Property</field>
            <field name="res_model">property.property</field>
            <field name="view_mode">form</field>
            <field name="domain">[('tenant_ids.user_id', '=', uid)]</field>
            <field name="context">{'form_view_ref': 'property_management.view_property_form_tenant'}</field>
        </record>
    </data>
</odoo>
