<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="property_website_template" name="Property Listing">
        <t t-call="website.layout">
            <div class="container mt-3">
                <h1>Available Properties</h1>
                <t t-foreach="properties" t-as="property">
                    <div class="card mb-3">
                        <div class="card-body">
                            <h5 class="card-title">
                                <t t-esc="property.name"/>
                            </h5>
                            <p class="card-text">
                                Address: <t t-esc="property.address"/><br/>
                                Type: <t t-esc="property.property_kind"/><br/>
                                Size: <t t-esc="property.size"/> sq ft<br/>
                                <strong>Monthly Rate: $<t t-esc="property.monthly_rate"/></strong>
                            </p>
                            <p class="card-text">
                                <t t-esc="property.description"/>
                            </p>
                        </div>
                    </div>
                </t>
            </div>
        </t>
    </template>
</odoo>
